# Notion Integration Settings
NOTION_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# Optional: Whisper model preference
DEFAULT_WHISPER_MODEL=base

# Optional: Custom Voice Memo paths (comma-separated)
CUSTOM_AUDIO_PATHS=/path/to/custom/recordings,/another/path

# Continuous Monitoring Settings (for daemon mode)
POLLING_INTERVAL=60              # How often to check for new files (seconds)
MIN_FILE_AGE=30                  # Wait before processing to ensure file is complete (seconds)
MAX_FILE_AGE_DAYS=7              # Only process files newer than this (days)
PROCESSED_FILES_DB=processed_files.db  # Database to track processed files
MONITOR_LOG_LEVEL=INFO           # Logging level for continuous monitoring